                        tbody.table-body

            //confirmar y guardar
            .form-group.row(style='padding-right:15px;')
                .col-xs-12.no-padding-left
                    button(type='button', class='BTN_NO Btn_Confirm').form-control.btn.btn-default.pull-right Confirmar
                .col-xs-12.no-padding-left
                    button(type='button', class='BTN_NO Btn_Edit').form-control.btn.btn-default.pull-right Editar
                .col-xs-12.no-padding-left
                    button(type='button', class='BTN_NO Btn_Save').form-control.btn.btn-default.pull-right Guardar

