    .col-md-3.no-padding-left
        form
            //fecha y proveedor
            .form-group.row
                .col-xs-6.col-md-12.no-padding-left
                    .col-xs-12
                        span Fecha:
                    .col-xs-12
                        input.form-control.new_order_date(type='date',)

                .col-xs-6.col-md-12.no-padding-left.bottom_row
                    .col-xs-12
                        span Fecha Entrega:
                    .col-xs-12
                        input.form-control.new_order_date_delivery(type='date',)

            .form-group.row
                .col-xs-6.col-md-12.no-padding-left
                    .col-xs-12
                        span Proveedor:
                    .col-xs-12
                        select.form-control.new_order_supplier
                            option

            //proyecto y actividad
            .form-group.row
                .col-xs-6.col-md-12.no-padding-left
                    .col-xs-12
                        span Proyecto:
                    .col-xs-12
                        select.form-control.new_order_project
                            option

                .col-xs-6.col-md-12.no-padding-left.bottom_row
                    .col-xs-12
                        span Actividad:
                    .col-xs-12
                        select.form-control.new_order_activity
                            option

            //producto y buscar
            .form-group.row
                .col-xs-6.col-md-12.no-padding-left
                    .col-xs-12
                        span Producto:
                            //a(href="/admin/products/product/add/?_popup=1").pull-right.popup_product.related-widget-wrapper-link.add-related
                            span.pull-right: i.glyphicon.glyphicon-plus-sign.popup_product.related-widget-wrapper-link.add-related(id="add_id_product")
                            span.pull-right(style="padding-right:10px;text-aling:center"): i.glyphicon.glyphicon-refresh.refresh_product
                    .col-xs-12.inner-addon.right-addon
                        i.glyphicon.glyphicon-barcode
                        input.form-control.order_product_code(type='text',id="id_product")
                .col-xs-6.col-md-12.no-padding-left.bottom_row
                    .col-xs-12
                        span Buscar:
                    .col-xs-12
                        select.form-control.new_order_search
                            option
            .form-group.row.table_row
                .col-xs-12
                    table.table.table-bordered
                        tbody
                            tr: th Sub-Total:
                                td(class='No_Sub_Total price') 0
                            tr: th IV:
                                td(class='No_Sub_Iv price') 0
                            tr: th Total:
                                td(class='No_Total price') 0

    .col-md-9.no-padding-left
        form
            //tabla
            .form-group.row.table_row.product_table_row(style='margin-top : 20px;')
