doctype html
html(lang="en")
    head
        title Gasto # {{expense.id}}

        |{% load humanize %}

        link(rel="stylesheet" href="/static/css/reset.css")

        link(rel="stylesheet" href="/static/css/bootstrapMod.css")
        link(rel="stylesheet" href="/static/css/orderpdf.css")


    body(style="font-family:helvetica;")

        .col-xs-12
            hr(style="border-top: 1px solid #ccc;")
            img(src= "/media/img/coto.png" style="width:300px;height:auto;margin-bottom:0px;")

        .col-xs-12
            hr(style="border-top: 1px solid #ccc;")
            h4(style="text-align: center; vertical-align: middle;font-size:13px") GASTO GENERAL
            hr(style="border-top: 1px solid #ccc;")
        .col-xs-6
            h6 <b>Gasto #</b> {{expense.id}}
            h6 <b>Proveedor: </b>{{expense.expense_supplier.supplier_name}}
            h6 <b>Proyecto #</b> {{expense.expense_project.id}} - {{expense.expense_project.project_name}}
            h6 <b>Actividad:</b> {{expense.expense_activity.activity_name}}

        .col-xs-6
            h6 <b>Fecha :</b> &nbsp {{expense.expense_date | date:"SHORT_DATE_FORMAT"}}
            h6 <b>Fecha Factura:</b> {{expense.expense_bill_date | date:"SHORT_DATE_FORMAT"}}

        .col-xs-12
            form.producttable
                //tabla
                .form-group.row
                    .col-xs-12(style="font-size:11px")
                        table.table.table-bordered
                            thead: tr
                                th Descripción
                                th Documento
                                th Total

                            tbody
                                tr
                                    td {{expense.expense_description}}
                                    td {{expense.expense_document}}
                                    td ₡ {{expense.expense_total | floatformat:"2"|intcomma}}

                                   // td -


        .col-xs-12
            .col-xs-4.wopadding.pull-left
                hr(style="border-top: 1px solid #000;")
                span(style="font-weight: bold") Firma Responsable

            .col-xs-5.wopadding.pull-right

                .col-xs-12.wopadding.pull-right
                    hr(style="border-top: 1px solid #ccc;")
                    span.spanbold Total:
                    span.spanbold.pull-right(style='margin-right:0px;') ₡ {{expense.expense_total | floatformat:"2"|intcomma}}
                    hr(style="border-top: 1px solid #ccc;")

