doctype html
html(lang="en")
    head
        title = order.id

        link(rel="stylesheet" href="/static/css/app.css")
        link(rel="stylesheet" href="/static/css/orderpdf.css")

    body


        .col-xs-12
            h4(style="text-aling:center;text-transform:uppercase"): b -----------------------Orden de compra de Producto -----------------------
        .col-xs-6
            h5 <b>Orden de compra #</b> {{order.id}}
            h5 <b>Proyecto #</b> {{order.order_project.id}} - {{order.order_project.project_name}}
            h5 <b>Actividad:</b> {{order.order_activity.activity_name}}

        .col-xs-6
            h5 <b>Fecha:</b> {{order.order_date}}
            h5 <b>Fecha Entraga:</b> {{order.order_date}}

        .col-xs-12
            form
                //tabla
                .form-group.row.table_row.product_table_row
                    .col-xs-12(style="font-size:13px")
                        table.table.table-bordered.NO_table
                            thead: tr
                                th Código
                                th Descripción
                                th Cantidad
                                th Unidad
                                th P.Unitario
                                th Subtotal
                                th Observaciones
                            tbody.table-body
                                {% for detail in details %}
                                tr
                                    td {{detail.order_detail_product.product_code}}
                                    td {{detail.order_detail_product.product_description}}
                                    td {{detail.order_detail_amount}}
                                    td unidad
                                    td ₡ {{detail.order_detail_price}}
                                    td ₡ {{detail.order_detail_total}}
                                    td -
                                {% endfor %}
        .col-xs-12
            .pull-right(style="padding-right:15px")
                h4: b Total: ₡{{order.order_total}}
