doctype html
html(lang="en")
    head

        |{% load humanize %}

        link(rel="stylesheet" href="/static/css/reset.css")

        link(rel="stylesheet" href="/static/css/bootstrapMod.css")
        link(rel="stylesheet" href="/static/css/orderpdf.css")


    body(style="font-family:helvetica;")

        .col-xs-12
            hr(style="border-top: 1px solid #ccc;")
            img(src= "/media/img/coto.png" style="width:300px;height:auto;margin-bottom:0px;")

        .col-xs-12
            hr(style="border-top: 1px solid #ccc;")
            h4(style="text-align: center; vertical-align: middle;font-size:13px") REPORTE DE ORDENES DE COMPRA POR PORYECTO
            hr(style="border-top: 1px solid #ccc;")
        //.col-xs-6
        //    h6 <b>Orden de compra #</b> {{order.id}}
        //    h6 <b>Proyecto #</b> {{order.order_project.id}} - {{order.order_project.project_name}}
        //    h6 <b>Actividad:</b> {{order.order_activity.activity_name}}
        //
        //.col-xs-6
        //    h6 <b>Fecha :</b> &nbsp {{order.order_date | date:"SHORT_DATE_FORMAT"}}
        //    h6 <b>Entraga:</b> {{order.order_date | date:"SHORT_DATE_FORMAT"}}

        .col-xs-12
            form.producttable
                //tabla
                .form-group.row
                    .col-xs-12(style="font-size:11px")
                        table.table.table-bordered
                            thead: tr
                                th Orden #
                                th Fecha
                                th Proveedor
                                th Actividad
                                th P.Subtotal
                                th IV
                                th Total
                                //th Observaciones
                            tbody
                                {% for order in orders %}
                                tr
                                    td {{order.id}}
                                    td {{order.order_date | date:"SHORT_DATE_FORMAT"}}
                                    td {{order.order_supplier}}
                                    td {{order.order_activity}}
                                    td ₡ {{order.order_subtotal | floatformat:"2"|intcomma}}
                                    td ₡ {{order.order_iv | floatformat:"2"|intcomma}}
                                    td ₡ {{order.order_total | floatformat:"2"|intcomma}}
                                   // td -
                                {% endfor %}

        .col-xs-12

            .col-xs-5.wopadding.pull-right

                .col-xs-12.wopadding.pull-right
                    hr(style="border-top: 1px solid #ccc; margin:4px 0;")
                    span.spanbold Totales:
                    hr(style="border-top: 1px solid #ccc; margin:4px 0;")

                .col-xs-12.wopadding.pull-right
                    span SubTotal:
                    span.pull-right ₡ {{subtotal | floatformat:"2"|intcomma}}

                .col-xs-12.wopadding.pull-right
                    span IV:
                    span.pull-right ₡ {{iv | floatformat:"2"|intcomma}}

                .col-xs-12.wopadding.pull-right
                    hr(style="border-top: 1px solid #ccc; margin:4px 0;")
                    span.spanbold Total:
                    span.spanbold.pull-right(style='margin-right:0px;') ₡ {{total | floatformat:"2"|intcomma}}
                    hr(style="border-top: 1px solid #ccc; margin:4px 0;")

